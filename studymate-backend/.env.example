# ========================================
# StudyMate Backend Environment Variables
# ========================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env in the same directory
# 2. Update the values based on your local environment
# 3. NEVER commit the .env file to version control
#
# NOTE: These environment variables can override application.properties
# To use them, reference in application.properties like: ${ENV_VAR_NAME}
# ========================================

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# PostgreSQL database connection details
# Default: PostgreSQL running on localhost:5432
DB_URL=jdbc:postgresql://localhost:5432/studymate
DB_USERNAME=studymate_user
DB_PASSWORD=studymate_user

# ⚠️  SECURITY WARNING: Change DB_PASSWORD in production!
# Use a strong password for production environments

# ----------------------------------------
# Server Configuration
# ----------------------------------------
# Port on which the Spring Boot application runs
SERVER_PORT=8080

# Active Spring profile (dev, test, prod)
SPRING_PROFILE=dev

# ----------------------------------------
# JWT Configuration (Story 0.19+)
# ----------------------------------------
# Secret key for JWT token signing
# MUST be at least 256 bits (32 characters) for HS256 algorithm
# Generate with: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-in-production-please-generate-a-secure-key

# ⚠️  SECURITY WARNING: Generate a secure JWT_SECRET for production!
# This default value is for development only

# JWT token expiration time in milliseconds
# Default: 86400000 (24 hours)
JWT_EXPIRATION=86400000

# ----------------------------------------
# Logging Configuration
# ----------------------------------------
# Log level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG

# ----------------------------------------
# CORS Configuration
# ----------------------------------------
# Allowed origins for CORS (comma-separated)
# Default: Angular dev server
CORS_ALLOWED_ORIGINS=http://localhost:4200

# ----------------------------------------
# Flyway Migration
# ----------------------------------------
# Enable/disable Flyway migrations
FLYWAY_ENABLED=true

# ----------------------------------------
# Application Configuration
# ----------------------------------------
# Application name
APP_NAME=studymate-backend

# ========================================
# USAGE NOTES:
# ========================================
#
# To use these variables in application.properties:
#
#   spring.datasource.url=${DB_URL}
#   spring.datasource.username=${DB_USERNAME}
#   spring.datasource.password=${DB_PASSWORD}
#   jwt.secret=${JWT_SECRET}
#
# You can also override properties via command line:
#   ./mvnw spring-boot:run -Dspring-boot.run.arguments="--spring.datasource.password=newpass"
#
# For production, consider using:
# - Environment variables set by your hosting platform
# - Secrets management (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Kubernetes ConfigMaps and Secrets
# ========================================
